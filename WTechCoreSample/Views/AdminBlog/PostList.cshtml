@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@model List<WTechCoreSample.Models.ORM.BlogPost>




<table class="table" style="background-color:white">
    <tr>
        <td>Id</td>
        <td>Title</td>
        <td>Add Date</td>
        <td>Update</td>
        <td>Delete</td>
        <td>Comments</td>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.AddDate</td>
            <td><a href="/AdminBlog/UpdateBlogPost/@item.Id">Güncelle</a></td>
            <td><a href="/AdminBlog/PostDelete/@item.Id">Sil</a></td>
            <td><a href="/AdminComment/Index/@item.Id">Yorumlara Git</a></td>
        </tr>
    }

</table>